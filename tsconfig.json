{
    "compilerOptions": {
        "target": "ES2015",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true,
        "types": ["@remix-run/node", "vite/client"],
        "verbatimModuleSyntax": true
    },
    "exclude": ["node_modules"]
}
